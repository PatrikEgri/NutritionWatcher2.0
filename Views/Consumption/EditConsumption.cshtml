@model NutritionWatcher2._0.Models.SaveConsumptionViewModel

@{
    ViewBag.Title = "Fogyasztás szerkesztése";
}
<div class="container" style="color: white;">
    <h2>Fogyasztás szerkesztése</h2>
    @using (Html.BeginForm("EditConsumption", "Consumption", FormMethod.Post))
    {
        <div class="form-group">
            @Html.LabelFor(x => x.Date)
            @Html.TextBoxFor(x => x.Date, "{0:yyyy-MM-dd}", new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.Date)
        </div>

        <div class="form-group">
            @Html.LabelFor(x => x.Time)
            @Html.TextBoxFor(x => x.Time, "{0:HH:mm}", new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.Time)
        </div>

        @Html.AntiForgeryToken()
        <input name="submit" type="submit" class="btn btn-success form-control" value="Módosítás" />
    }
</div>
