@model NutritionWatcher2._0.Models.ApplicationUser

@{
    ViewBag.Title = "Felhasználói adatok";
}

<div class="container-md">
    <h2>Felhasználói adatok</h2>
    <div class="table-responsive">
        <table class="table table-dark">
            <tr>
                <td>Felhasználónév</td>
                <td>@Model.UserName</td>
                <td><a href="/Account/EditUsername"><i class="fas fa-edit"></i></a></td>
            </tr>
            <tr>
                <td>@Html.LabelFor(x => x.Firstname)</td>
                <td>@Model.Firstname</td>
                <td><a href="/Account/EditFirstname"><i class="fas fa-edit"></i></a></td>
            </tr>
            <tr>
                <td>@Html.LabelFor(x => x.Lastname)</td>
                <td>@Model.Lastname</td>
                <td><a href="/Account/EditLastname"><i class="fas fa-edit"></i></a></td>
            </tr>
            <tr>
                <td>E-Mail cím</td>
                <td>@Model.Email</td>
                <td><a href="/Account/EditEmail"><i class="fas fa-edit"></i></a></td>
            </tr>
            <tr>
                <td>Telefonszám</td>
                <td>@Model.PhoneNumber</td>
                <td><a href="/Account/EditPhoneNumber"><i class="fas fa-edit"></i></a></td>
            </tr>
        </table>
    </div>
</div>

